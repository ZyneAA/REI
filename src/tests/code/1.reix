use util/gfx as gfx;

fn fib(n) {

    let a = 0;
    let b = 1;
    loop (let i = 0..n; 1) {
        let tmp = a;
        a = b;
        b = tmp + b;
    }
    return a;

}

fn both_fib_call() {
    println "iterative: " + fib(40);
}

// Entry point
